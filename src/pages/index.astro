---
import Layout from '../layouts/Layout.astro';
---

<Layout title="Directory Websites That Rank">
  <!-- Hero Section - Animated Directory Build -->
  <section class="relative min-h-[calc(100svh-4rem)] md:min-h-[calc(100svh-5rem)] flex items-center justify-center overflow-hidden bg-[#0a0a0f]">
    <!-- Animated Grid Background -->
    <div class="absolute inset-0 grid-bg opacity-50" id="hero-grid"></div>
    
    <!-- Floating Elements -->
    <div class="absolute top-20 left-10 w-64 h-64 bg-[#00f0ff]/5 rounded-full blur-3xl animate-float"></div>
    <div class="absolute bottom-20 right-10 w-96 h-96 bg-[#8b5cf6]/5 rounded-full blur-3xl animate-float-delayed"></div>
    
    <!-- Animated SVG Grid Lines -->
    <div class="absolute inset-0 hidden md:flex items-center justify-center pointer-events-none">
      <svg class="w-full h-full max-w-6xl max-h-[800px]" viewBox="0 0 800 600" fill="none" id="hero-svg">
        <!-- Grid Lines -->
        <line class="grid-line" x1="100" y1="100" x2="700" y2="100" stroke="url(#cyan-violet)" stroke-width="1" stroke-dasharray="600" stroke-dashoffset="600" />
        <line class="grid-line" x1="100" y1="200" x2="700" y2="200" stroke="url(#cyan-violet)" stroke-width="1" stroke-dasharray="600" stroke-dashoffset="600" />
        <line class="grid-line" x1="100" y1="300" x2="700" y2="300" stroke="url(#cyan-violet)" stroke-width="1" stroke-dasharray="600" stroke-dashoffset="600" />
        <line class="grid-line" x1="100" y1="400" x2="700" y2="400" stroke="url(#cyan-violet)" stroke-width="1" stroke-dasharray="600" stroke-dashoffset="600" />
        <line class="grid-line" x1="100" y1="500" x2="700" y2="500" stroke="url(#cyan-violet)" stroke-width="1" stroke-dasharray="600" stroke-dashoffset="600" />
        
        <line class="grid-line" x1="100" y1="100" x2="100" y2="500" stroke="url(#cyan-violet)" stroke-width="1" stroke-dasharray="400" stroke-dashoffset="400" />
        <line class="grid-line" x1="250" y1="100" x2="250" y2="500" stroke="url(#cyan-violet)" stroke-width="1" stroke-dasharray="400" stroke-dashoffset="400" />
        <line class="grid-line" x1="400" y1="100" x2="400" y2="500" stroke="url(#cyan-violet)" stroke-width="1" stroke-dasharray="400" stroke-dashoffset="400" />
        <line class="grid-line" x1="550" y1="100" x2="550" y2="500" stroke="url(#cyan-violet)" stroke-width="1" stroke-dasharray="400" stroke-dashoffset="400" />
        <line class="grid-line" x1="700" y1="100" x2="700" y2="500" stroke="url(#cyan-violet)" stroke-width="1" stroke-dasharray="400" stroke-dashoffset="400" />
        
        <!-- Data Points (animated circles) -->
        <circle class="data-point" cx="175" cy="150" r="0" fill="#00f0ff" opacity="0.8" />
        <circle class="data-point" cx="325" cy="250" r="0" fill="#8b5cf6" opacity="0.8" />
        <circle class="data-point" cx="475" cy="350" r="0" fill="#ff006e" opacity="0.8" />
        <circle class="data-point" cx="625" cy="200" r="0" fill="#00f0ff" opacity="0.8" />
        <circle class="data-point" cx="175" cy="450" r="0" fill="#8b5cf6" opacity="0.8" />
        <circle class="data-point" cx="625" cy="450" r="0" fill="#ff006e" opacity="0.8" />
        
        <!-- Connection Lines -->
        <line class="connect-line" x1="175" y1="150" x2="325" y2="250" stroke="#00f0ff" stroke-width="1" opacity="0" />
        <line class="connect-line" x1="325" y1="250" x2="475" y2="350" stroke="#8b5cf6" stroke-width="1" opacity="0" />
        <line class="connect-line" x1="475" y1="350" x2="625" y2="200" stroke="#ff006e" stroke-width="1" opacity="0" />
        <line class="connect-line" x1="175" y1="150" x2="175" y2="450" stroke="#00f0ff" stroke-width="1" opacity="0" />
        <line class="connect-line" x1="625" y1="200" x2="625" y2="450" stroke="#ff006e" stroke-width="1" opacity="0" />
        
        <!-- Counter Boxes -->
        <g class="counter-box" opacity="0">
          <rect x="140" y="380" width="70" height="40" rx="4" fill="#151520" stroke="#2a2a3a" />
          <text x="175" y="405" text-anchor="middle" fill="#00f0ff" font-family="JetBrains Mono" font-size="14" font-weight="600"><tspan class="counter" data-target="7500">0</tspan></text>
        </g>
        
        <g class="counter-box" opacity="0">
          <rect x="440" y="180" width="70" height="40" rx="4" fill="#151520" stroke="#2a2a3a" />
          <text x="475" y="205" text-anchor="middle" fill="#8b5cf6" font-family="JetBrains Mono" font-size="14" font-weight="600"><tspan class="counter" data-target="4100">0</tspan></text>
        </g>
        
        <g class="counter-box" opacity="0">
          <rect x="590" y="480" width="70" height="40" rx="4" fill="#151520" stroke="#2a2a3a" />
          <text x="625" y="505" text-anchor="middle" fill="#ff006e" font-family="JetBrains Mono" font-size="14" font-weight="600"><tspan class="counter" data-target="463">0</tspan>K</text>
        </g>
        
        <defs>
          <linearGradient id="cyan-violet" x1="0%" y1="0%" x2="100%" y2="0%">
            <stop offset="0%" stop-color="#00f0ff" stop-opacity="0.3" />
            <stop offset="50%" stop-color="#8b5cf6" stop-opacity="0.3" />
            <stop offset="100%" stop-color="#ff006e" stop-opacity="0.3" />
          </linearGradient>
        </defs>
      </svg>
    </div>

    <!-- Hero Content -->
    <div class="relative z-10 max-w-5xl mx-auto px-4 sm:px-6 lg:px-8 text-center hero-content-shell">
      <div class="inline-flex items-center gap-2 px-4 py-2 rounded-full bg-[#151520] border border-[#2a2a3a] mb-8 hero-badge opacity-0">
        <span class="w-2 h-2 rounded-full bg-[#00f0ff] pulse-live"></span>
        <span class="text-sm text-[#8b8b9a] font-['JetBrains_Mono']">AVAILABLE FOR PROJECTS</span>
      </div>
      
      <h1 class="text-4xl md:text-7xl lg:text-8xl font-bold text-white tracking-tight leading-[1.05] mb-5 font-['Space_Grotesk']">
        <span class="hero-title-line block overflow-hidden"><span class="inline-block">We build <span class="text-gradient">directories</span></span></span>
        <span class="hero-title-line block overflow-hidden"><span class="inline-block">that <span class="text-gradient-cyan">rank</span></span></span>
      </h1>
      
      <p class="text-base md:text-xl text-[#8b8b9a] max-w-2xl mx-auto mb-8 md:mb-10 leading-relaxed hero-subtitle opacity-0">
        Premium directory websites for niche communities. Clean design, solid SEO, and fast performance out of the box. No templates, no shortcuts, just results.
      </p>
      
      <div class="flex flex-col sm:flex-row gap-4 justify-center hero-cta opacity-0">
        <a href="/portfolio" class="group inline-flex items-center justify-center px-8 py-4 text-base font-semibold text-[#0a0a0f] bg-gradient-to-r from-[#00f0ff] to-[#00c8ff] rounded-xl hover:shadow-[0_0_30px_rgba(0,240,255,0.4)] transition-all btn-cyber glow-border">
          View Portfolio
          <svg class="w-5 h-5 ml-2 group-hover:translate-x-1 transition-transform" fill="none" stroke="currentColor" viewBox="0 0 24 24">
            <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M17 8l4 4m0 0l-4 4m4-4H3"/>
          </svg>
        </a>
        <a href="/pricing" class="inline-flex items-center justify-center px-8 py-4 text-base font-semibold text-white border border-[#2a2a3a] rounded-xl hover:border-[#00f0ff] hover:shadow-[0_0_20px_rgba(0,240,255,0.1)] transition-all glow-border">
          See Pricing
        </a>
      </div>
    </div>
    
    <!-- Scroll Indicator -->
    <div class="absolute bottom-6 left-1/2 -translate-x-1/2 hidden md:flex flex-col items-center gap-2 opacity-0 scroll-indicator">
      <span class="text-xs text-[#5b5b6a] font-['JetBrains_Mono']">SCROLL</span>
      <div class="w-px h-8 bg-gradient-to-b from-[#00f0ff] to-transparent"></div>
    </div>
  </section>

  <!-- Stats Section - Animated -->
  <section class="relative border-y border-[#2a2a3a]/50 bg-[#0a0a0f] overflow-hidden">
    <div class="absolute inset-0 bg-glow"></div>
    
    <div class="relative max-w-7xl mx-auto px-4 sm:px-6 lg:px-8 py-12 md:py-14">
      <div class="grid grid-cols-2 md:grid-cols-4 gap-8 md:gap-4">
        <div class="stat-item text-center group">
          <div class="text-4xl md:text-5xl font-bold text-white mb-2 font-['JetBrains_Mono']"><span class="stat-counter" data-target="2">0</span></div>
          <div class="text-sm text-[#8b8b9a] font-medium tracking-wide">LIVE PROJECTS</div>
          <div class="w-12 h-0.5 bg-gradient-to-r from-[#00f0ff] to-transparent mx-auto mt-4 opacity-0 group-hover:opacity-100 transition-opacity"></div>
        </div>
        
        <div class="stat-item text-center group">
          <div class="text-4xl md:text-5xl font-bold text-white mb-2 font-['JetBrains_Mono']"><span class="stat-counter" data-target="8">0</span>K+</div>
          <div class="text-sm text-[#8b8b9a] font-medium tracking-wide">URLS INDEXED</div>
          <div class="w-12 h-0.5 bg-gradient-to-r from-[#8b5cf6] to-transparent mx-auto mt-4 opacity-0 group-hover:opacity-100 transition-opacity"></div>
        </div>
        
        <div class="stat-item text-center group">
          <div class="text-4xl md:text-5xl font-bold text-white mb-2 font-['JetBrains_Mono']"><span class="stat-counter" data-target="4.1">0</span>K+</div>
          <div class="text-sm text-[#8b8b9a] font-medium tracking-wide">ORGANIC KEYWORDS</div>
          <div class="w-12 h-0.5 bg-gradient-to-r from-[#ff006e] to-transparent mx-auto mt-4 opacity-0 group-hover:opacity-100 transition-opacity"></div>
        </div>
        
        <div class="stat-item text-center group">
          <div class="text-4xl md:text-5xl font-bold text-white mb-2 font-['JetBrains_Mono']"><span class="stat-counter" data-target="14">0</span></div>
          <div class="text-sm text-[#8b8b9a] font-medium tracking-wide">DAY DELIVERY</div>
          <div class="w-12 h-0.5 bg-gradient-to-r from-[#00f0ff] to-transparent mx-auto mt-4 opacity-0 group-hover:opacity-100 transition-opacity"></div>
        </div>
      </div>
    </div>
  </section>

  <!-- Portfolio Preview - 3D Cards -->
  <section class="relative py-16 md:py-20 bg-[#0a0a0f] overflow-hidden">
    <div class="absolute top-0 right-0 w-1/2 h-1/2 bg-[#00f0ff]/3 rounded-full blur-[150px]"></div>
    <div class="absolute bottom-0 left-0 w-1/2 h-1/2 bg-[#8b5cf6]/3 rounded-full blur-[150px]"></div>
    
    <div class="relative max-w-7xl mx-auto px-4 sm:px-6 lg:px-8">
      <div class="text-center mb-16 reveal">
        <span class="text-sm text-[#00f0ff] font-['JetBrains_Mono'] tracking-wider">RECENT WORK</span>
        <h2 class="text-4xl md:text-5xl font-bold text-white mt-4 mb-6 font-['Space_Grotesk']">Built to <span class="text-gradient">perform</span></h2>
        <p class="text-[#8b8b9a] max-w-2xl mx-auto">Two projects, real results. I don't have a massive portfolio because I focus on quality over quantity.</p>
      </div>

      <div class="grid md:grid-cols-2 gap-8">
        <!-- Project 1 - IndoorClimbingGym -->
        <a href="https://indoorclimbinggym.com" target="_blank" rel="noopener" class="tilt-card group block reveal">
          <div class="relative bg-[#151520] border border-[#2a2a3a] rounded-2xl overflow-hidden glow-border transition-all duration-300 hover:border-[#00f0ff]/30">
            <div class="absolute top-4 left-4 z-10 flex items-center gap-2">
              <span class="flex items-center gap-1.5 px-3 py-1 rounded-full bg-[#00f0ff]/10 border border-[#00f0ff]/20 text-xs text-[#00f0ff] font-['JetBrains_Mono']">
                <span class="w-1.5 h-1.5 rounded-full bg-[#00f0ff] pulse-live"></span>
                LIVE
              </span>
            </div>
            
            <div class="aspect-video border-b border-[#2a2a3a] relative overflow-hidden">
              <img src="/images/portfolio/indoorclimbinggym-hero.png" alt="IndoorClimbingGym hero section" class="w-full h-full object-cover" loading="lazy" />
              <div class="absolute inset-0 bg-gradient-to-t from-[#0a0a0f]/40 to-transparent"></div>
            </div>
            
            <div class="p-6">
              <h3 class="text-xl font-bold text-white mb-2 group-hover:text-[#00f0ff] transition-colors font-['Space_Grotesk']">IndoorClimbingGym.com</h3>
              <p class="text-[#8b8b9a] text-sm mb-6">The largest directory of indoor climbing gyms worldwide. Launched November 2025.</p>
              
              <div class="grid grid-cols-3 gap-4">
                <div class="text-center p-3 rounded-lg bg-[#0a0a0f] border border-[#2a2a3a]">
                  <div class="text-lg font-bold text-white font-['JetBrains_Mono']">7.5K</div>
                  <div class="text-xs text-[#5b5b6a]">URLs</div>
                </div>
                <div class="text-center p-3 rounded-lg bg-[#0a0a0f] border border-[#2a2a3a]">
                  <div class="text-lg font-bold text-[#00f0ff] font-['JetBrains_Mono']">4.1K</div>
                  <div class="text-xs text-[#5b5b6a]">Keywords</div>
                </div>
                <div class="text-center p-3 rounded-lg bg-[#0a0a0f] border border-[#2a2a3a]">
                  <div class="text-lg font-bold text-[#8b5cf6] font-['JetBrains_Mono']">463K</div>
                  <div class="text-xs text-[#5b5b6a]">Impressions</div>
                </div>
              </div>
            </div>
          </div>
        </a>

        <!-- Project 2 - GolfSimMap -->
        <a href="https://golfsimmap.com" target="_blank" rel="noopener" class="tilt-card group block reveal">
          <div class="relative bg-[#151520] border border-[#2a2a3a] rounded-2xl overflow-hidden glow-border transition-all duration-300 hover:border-[#8b5cf6]/30">
            <div class="absolute top-4 left-4 z-10 flex items-center gap-2">
              <span class="flex items-center gap-1.5 px-3 py-1 rounded-full bg-[#8b5cf6]/10 border border-[#8b5cf6]/20 text-xs text-[#8b5cf6] font-['JetBrains_Mono']">
                <span class="w-1.5 h-1.5 rounded-full bg-[#8b5cf6] pulse-live"></span>
                LIVE
              </span>
              <span class="px-3 py-1 rounded-full bg-[#ff006e]/10 border border-[#ff006e]/20 text-xs text-[#ff006e] font-['JetBrains_Mono']">NEW</span>
            </div>
            
            <div class="aspect-video border-b border-[#2a2a3a] relative overflow-hidden">
              <img src="/images/portfolio/golfsimmap-hero.png" alt="GolfSimMap hero section" class="w-full h-full object-cover" loading="lazy" />
              <div class="absolute inset-0 bg-gradient-to-t from-[#0a0a0f]/40 to-transparent"></div>
            </div>
            
            <div class="p-6">
              <h3 class="text-xl font-bold text-white mb-2 group-hover:text-[#8b5cf6] transition-colors font-['Space_Grotesk']">GolfSimMap.com</h3>
              <p class="text-[#8b8b9a] text-sm mb-6">Find golf simulators near you. Recently launched February 2026.</p>
              
              <div class="grid grid-cols-3 gap-4">
                <div class="text-center p-3 rounded-lg bg-[#0a0a0f] border border-[#2a2a3a]">
                  <div class="text-lg font-bold text-white font-['JetBrains_Mono']">DR 13</div>
                  <div class="text-xs text-[#5b5b6a]">Authority</div>
                </div>
                <div class="text-center p-3 rounded-lg bg-[#0a0a0f] border border-[#2a2a3a]">
                  <div class="text-lg font-bold text-[#00f0ff] font-['JetBrains_Mono']">1 wk</div>
                  <div class="text-xs text-[#5b5b6a]">To DR 13</div>
                </div>
                <div class="text-center p-3 rounded-lg bg-[#0a0a0f] border border-[#2a2a3a]">
                  <div class="text-lg font-bold text-[#8b5cf6] font-['JetBrains_Mono']">100%</div>
                  <div class="text-xs text-[#5b5b6a]">Lighthouse</div>
                </div>
              </div>
            </div>
          </div>
        </a>
      </div>

      <div class="text-center mt-12 reveal">
        <a href="/portfolio" class="inline-flex items-center px-6 py-3 text-[#00f0ff] border border-[#00f0ff]/30 rounded-xl hover:bg-[#00f0ff]/10 hover:border-[#00f0ff] transition-all font-['JetBrains_Mono'] text-sm">
          View Full Portfolio
          <svg class="w-4 h-4 ml-2" fill="none" stroke="currentColor" viewBox="0 0 24 24">
            <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M17 8l4 4m0 0l-4 4m4-4H3"/>
          </svg>
        </a>
      </div>
    </div>
  </section>

  <!-- Process Preview - Scroll Triggered -->
  <section class="relative py-24 md:py-32 bg-[#0a0a0f] overflow-hidden">
    <div class="absolute inset-0 bg-glow"></div>
    
    <div class="relative max-w-7xl mx-auto px-4 sm:px-6 lg:px-8">
      <div class="grid lg:grid-cols-2 gap-16 items-center">
        <div class="reveal">
          <span class="text-sm text-[#00f0ff] font-['JetBrains_Mono'] tracking-wider">HOW IT WORKS</span>
          <h2 class="text-4xl md:text-5xl font-bold text-white mt-4 mb-6 font-['Space_Grotesk']">Three steps to <span class="text-gradient">_launch</span></h2>
          <p class="text-[#8b8b9a] text-lg mb-10">A simple, streamlined process. From idea to live site in 14 days. No endless back-and-forth, no scope creep.</p>
          
          <div class="space-y-6">
            <div class="process-step flex gap-5 group">
              <div class="flex flex-col items-center">
                <div class="w-12 h-12 rounded-xl bg-[#151520] border border-[#2a2a3a] flex items-center justify-center text-lg font-bold text-[#00f0ff] font-['JetBrains_Mono'] group-hover:border-[#00f0ff] group-hover:shadow-[0_0_20px_rgba(0,240,255,0.2)] transition-all">01</div>
                <div class="w-px flex-1 bg-[#2a2a3a] my-3"></div>
              </div>
              <div class="pb-8">
                <h4 class="text-white font-semibold text-lg mb-2">Discovery</h4>
                <p class="text-[#8b8b9a] text-sm">Tell me about your niche, goals, and requirements. We'll define the scope and set clear expectations.</p>
              </div>
            </div>
            
            <div class="process-step flex gap-5 group">
              <div class="flex flex-col items-center">
                <div class="w-12 h-12 rounded-xl bg-[#151520] border border-[#2a2a3a] flex items-center justify-center text-lg font-bold text-[#8b5cf6] font-['JetBrains_Mono'] group-hover:border-[#8b5cf6] group-hover:shadow-[0_0_20px_rgba(139,92,246,0.2)] transition-all">02</div>
                <div class="w-px flex-1 bg-[#2a2a3a] my-3"></div>
              </div>
              <div class="pb-8">
                <h4 class="text-white font-semibold text-lg mb-2">Design & Build</h4>
                <p class="text-[#8b8b9a] text-sm">I design and develop your directory with clean, modern code. You'll see progress updates throughout.</p>
              </div>
            </div>
            
            <div class="process-step flex gap-5 group">
              <div class="flex flex-col items-center">
                <div class="w-12 h-12 rounded-xl bg-[#151520] border border-[#2a2a3a] flex items-center justify-center text-lg font-bold text-[#ff006e] font-['JetBrains_Mono'] group-hover:border-[#ff006e] group-hover:shadow-[0_0_20px_rgba(255,0,110,0.2)] transition-all">03</div>
              </div>
              <div>
                <h4 class="text-white font-semibold text-lg mb-2">Launch</h4>
                <p class="text-[#8b8b9a] text-sm">Site goes live with SEO foundation and analytics in place. Time to start ranking.</p>
              </div>
            </div>
          </div>
          
          <a href="/process" class="inline-flex items-center mt-8 text-[#00f0ff] hover:text-white transition-colors group">
            <span class="font-['JetBrains_Mono'] text-sm">See Full Process</span>
            <svg class="w-4 h-4 ml-2 group-hover:translate-x-1 transition-transform" fill="none" stroke="currentColor" viewBox="0 0 24 24">
              <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M17 8l4 4m0 0l-4 4m4-4H3"/>
            </svg>
          </a>
        </div>
        
        <div class="reveal">
          <div class="relative">
            <div class="absolute -inset-4 bg-gradient-to-r from-[#00f0ff]/20 to-[#8b5cf6]/20 rounded-3xl blur-2xl"></div>
            
            <div class="relative bg-[#151520] border border-[#2a2a3a] rounded-2xl p-8">
              <h3 class="text-xl font-bold text-white mb-6 font-['Space_Grotesk']">What's Included</h3>
              
              <ul class="space-y-4">
                <li class="flex items-start gap-4">
                  <div class="w-6 h-6 rounded-lg bg-[#00f0ff]/10 border border-[#00f0ff]/20 flex items-center justify-center flex-shrink-0 mt-0.5">
                    <svg class="w-3.5 h-3.5 text-[#00f0ff]" fill="none" stroke="currentColor" viewBox="0 0 24 24">
                      <path stroke-linecap="round" stroke-linejoin="round" stroke-width="3" d="M5 13l4 4L19 7"/>
                    </svg>
                  </div>
                  <span class="text-[#e2e2e8]">Custom design <span class="text-[#8b8b9a]">(no templates)</span></span>
                </li>
                <li class="flex items-start gap-4">
                  <div class="w-6 h-6 rounded-lg bg-[#8b5cf6]/10 border border-[#8b5cf6]/20 flex items-center justify-center flex-shrink-0 mt-0.5">
                    <svg class="w-3.5 h-3.5 text-[#8b5cf6]" fill="none" stroke="currentColor" viewBox="0 0 24 24">
                      <path stroke-linecap="round" stroke-linejoin="round" stroke-width="3" d="M5 13l4 4L19 7"/>
                    </svg>
                  </div>
                  <span class="text-[#e2e2e8]">Built with <span class="text-[#8b8b9a]">Astro or Next.js</span></span>
                </li>
                <li class="flex items-start gap-4">
                  <div class="w-6 h-6 rounded-lg bg-[#ff006e]/10 border border-[#ff006e]/20 flex items-center justify-center flex-shrink-0 mt-0.5">
                    <svg class="w-3.5 h-3.5 text-[#ff006e]" fill="none" stroke="currentColor" viewBox="0 0 24 24">
                      <path stroke-linecap="round" stroke-linejoin="round" stroke-width="3" d="M5 13l4 4L19 7"/>
                    </svg>
                  </div>
                  <span class="text-[#e2e2e8]">SEO-optimized <span class="text-[#8b8b9a]">structure</span></span>

  <script>
    import { gsap } from 'gsap';
    import { ScrollTrigger } from 'gsap/ScrollTrigger';
    
    gsap.registerPlugin(ScrollTrigger);

    // Hero Animations
    const heroTimeline = gsap.timeline({ defaults: { ease: 'power3.out' } });
    
    // Animate grid lines
    heroTimeline.to('.grid-line', {
      strokeDashoffset: 0,
      duration: 1.5,
      stagger: 0.1,
      ease: 'power2.inOut'
    }, 0.5);
    
    // Animate data points
    heroTimeline.to('.data-point', {
      attr: { r: 6 },
      duration: 0.5,
      stagger: 0.1,
      ease: 'back.out(2)'
    }, 1.5);
    
    // Animate connection lines
    heroTimeline.to('.connect-line', {
      opacity: 0.6,
      duration: 0.5,
      stagger: 0.1
    }, 2);
    
    // Animate counter boxes
    heroTimeline.to('.counter-box', {
      opacity: 1,
      duration: 0.5,
      stagger: 0.2
    }, 2.5);
    
    // Animate counters
    heroTimeline.add(() => {
      document.querySelectorAll('.counter').forEach(counter => {
        const target = parseInt(counter.getAttribute('data-target'));
        gsap.to(counter, {
          textContent: target,
          duration: 1.5,
          ease: 'power2.out',
          snap: { textContent: 1 },
          onUpdate: function() {
            if (target > 1000) {
              counter.textContent = Math.round(this.targets()[0].textContent / 100) / 10 + 'K';
            }
          }
        });
      });
    }, 2.8);

    // Hero content
    heroTimeline.to('.hero-badge', { opacity: 1, y: 0, duration: 0.6 }, 0.3);
    heroTimeline.from('.hero-title-line span', {
      y: 100,
      opacity: 0,
      duration: 0.8,
      stagger: 0.15
    }, 0.5);
    heroTimeline.to('.hero-subtitle', { opacity: 1, y: 0, duration: 0.6 }, 1);
    heroTimeline.to('.hero-cta', { opacity: 1, y: 0, duration: 0.6 }, 1.2);
    heroTimeline.to('.scroll-indicator', { opacity: 1, duration: 0.6 }, 1.5);

    // Stat counters on scroll
    const statObserver = new IntersectionObserver((entries) => {
      entries.forEach(entry => {
        if (entry.isIntersecting) {
          const counters = entry.target.querySelectorAll('.stat-counter');
          counters.forEach(counter => {
            const target = parseFloat(counter.getAttribute('data-target'));
            gsap.to(counter, {
              textContent: target,
              duration: 2,
              ease: 'power2.out',
              snap: { textContent: target < 10 ? 1 : 0.1 }
            });
          });
          statObserver.unobserve(entry.target);
        }
      });
    }, { threshold: 0.5 });

    document.querySelectorAll('.stat-item').forEach(item => statObserver.observe(item));

    // Reveal animations on scroll
    const revealElements = document.querySelectorAll('.reveal');
    revealElements.forEach(el => {
      gsap.fromTo(el, 
        { opacity: 0, y: 30 },
        {
          opacity: 1,
          y: 0,
          duration: 0.8,
          ease: 'power3.out',
          scrollTrigger: {
            trigger: el,
            start: 'top 80%',
            toggleActions: 'play none none none'
          }
        }
      );
    });

    // 3D Tilt effect for cards
    const tiltCards = document.querySelectorAll('.tilt-card');
    tiltCards.forEach(card => {
      card.addEventListener('mousemove', (e) => {
        const rect = card.getBoundingClientRect();
        const x = e.clientX - rect.left;
        const y = e.clientY - rect.top;
        const centerX = rect.width / 2;
        const centerY = rect.height / 2;
        const rotateX = (y - centerY) / 20;
        const rotateY = (centerX - x) / 20;
        
        card.style.transform = `perspective(1000px) rotateX(${rotateX}deg) rotateY(${rotateY}deg) scale3d(1.02, 1.02, 1.02)`;
      });
      
      card.addEventListener('mouseleave', () => {
        card.style.transform = 'perspective(1000px) rotateX(0) rotateY(0) scale3d(1, 1, 1)';
      });
    });

    // Parallax effect for floating elements
    document.addEventListener('mousemove', (e) => {
      const moveX = (e.clientX - window.innerWidth / 2) * 0.01;
      const moveY = (e.clientY - window.innerHeight / 2) * 0.01;
      
      document.querySelectorAll('.animate-float, .animate-float-delayed').forEach((el, i) => {
        const factor = (i + 1) * 0.5;
        el.style.transform = `translate(${moveX * factor}px, ${moveY * factor}px)`;
      });
    }, { passive: true });
  </script>

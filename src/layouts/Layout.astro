---
import '../styles/global.css';

export interface Props {
  title: string;
  description?: string;
}

const { title, description = "I build directories that rank. Premium directory websites for niche communities." } = Astro.props;
---

<!DOCTYPE html>
<html lang="en" class="dark">
<head>
  <meta charset="UTF-8">
  <meta name="viewport" content="width=device-width, initial-scale=1.0">
  <meta name="description" content={description}>
  <title>{title} | Stackbase</title>
  <link rel="preconnect" href="https://fonts.googleapis.com">
  <link rel="preconnect" href="https://fonts.gstatic.com" crossorigin>
  <link href="https://fonts.googleapis.com/css2?family=Inter:wght@300;400;500;600;700&display=swap" rel="stylesheet">
</head>
<body class="bg-zinc-950 text-zinc-100 font-sans antialiased">
  <header class="fixed top-0 left-0 right-0 z-50 bg-zinc-950/80 backdrop-blur-md border-b border-zinc-800/50">
    <div class="max-w-7xl mx-auto px-4 sm:px-6 lg:px-8">
      <nav class="flex items-center justify-between h-16">
        <a href="/" class="text-xl font-semibold text-white tracking-tight">Stackbase</a>
        <div class="hidden md:flex items-center gap-8">
          <a href="/portfolio" class="text-sm text-zinc-400 hover:text-white transition-colors">Portfolio</a>
          <a href="/process" class="text-sm text-zinc-400 hover:text-white transition-colors">Process</a>
          <a href="/pricing" class="text-sm text-zinc-400 hover:text-white transition-colors">Pricing</a>
          <a href="/about" class="text-sm text-zinc-400 hover:text-white transition-colors">About</a>
          <a href="/faq" class="text-sm text-zinc-400 hover:text-white transition-colors">FAQ</a>
        </div>
        <a href="/pricing" class="hidden md:inline-flex items-center px-4 py-2 text-sm font-medium text-zinc-950 bg-white rounded-lg hover:bg-zinc-200 transition-colors">
          Get Started
        </a>
        <button class="md:hidden text-zinc-400" aria-label="Menu">
          <svg class="w-6 h-6" fill="none" stroke="currentColor" viewBox="0 0 24 24">
            <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M4 6h16M4 12h16M4 18h16"/>
          </svg>
        </button>
      </nav>
    </div>
  </header>

  <main class="pt-16">
    <slot />
  </main>

  <footer class="border-t border-zinc-800/50 mt-24">
    <div class="max-w-7xl mx-auto px-4 sm:px-6 lg:px-8 py-12">
      <div class="grid grid-cols-1 md:grid-cols-4 gap-8">
        <div class="md:col-span-2">
          <h3 class="text-lg font-semibold text-white mb-2">Stackbase</h3>
          <p class="text-zinc-400 text-sm max-w-sm">Building directories that rank. Premium directory websites for niche communities with a focus on quality over quantity.</p>
        </div>
        <div>
          <h4 class="text-sm font-medium text-white mb-3">Pages</h4>
          <ul class="space-y-2">
            <li><a href="/portfolio" class="text-sm text-zinc-500 hover:text-zinc-300 transition-colors">Portfolio</a></li>
            <li><a href="/process" class="text-sm text-zinc-500 hover:text-zinc-300 transition-colors">Process</a></li>
            <li><a href="/pricing" class="text-sm text-zinc-500 hover:text-zinc-300 transition-colors">Pricing</a></li>
            <li><a href="/about" class="text-sm text-zinc-500 hover:text-zinc-300 transition-colors">About</a></li>
          </ul>
        </div>
        <div>
          <h4 class="text-sm font-medium text-white mb-3">Connect</h4>
          <ul class="space-y-2">
            <li><a href="mailto:hello@stackbase.directory" class="text-sm text-zinc-500 hover:text-zinc-300 transition-colors">Email</a></li>
            <li><a href="https://twitter.com" class="text-sm text-zinc-500 hover:text-zinc-300 transition-colors">Twitter</a></li>
            <li><a href="https://github.com" class="text-sm text-zinc-500 hover:text-zinc-300 transition-colors">GitHub</a></li>
          </ul>
        </div>
      </div>
      <div class="mt-12 pt-8 border-t border-zinc-800/50 text-center">
        <p class="text-xs text-zinc-600">Â© 2026 Stackbase. Built with Astro & Tailwind CSS.</p>
      </div>
    </div>
  </footer>
</body>
</html>

<style is:global>
  html {
    scroll-behavior: smooth;
  }
  
  ::selection {
    background-color: rgba(255, 255, 255, 0.15);
  }
</style>
